<section id="devise" class="login common">
  <div class="title">
    <div></div>
    <h1>Connexion</h1>
    <%= link_to "", root_path, class: "close" %>
  </div>
  <div class="container">
    <img src="http://placehold.it/200x200" alt="">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, placeholder: "Adresse mail", class: "input simple" %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de passe", class: "input simple" %>

        <div class="more">
          <% if devise_mapping.rememberable? -%>
              <div class="checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, "Se souvenir de moi" %>
              </div>
          <% end -%>
          <%= link_to "CrÃ©er un compte", new_user_registration_path %>
        </div>

        <%= f.submit "Connexion", class: "btn btn-default" %>
    <% end %>
  </div>
</section>
