<section id="issues" class="index">
  <h3>probl√©matiques</h3>
  <% @issues.each do |issue| %>
      <div id="card">
        <div class="head">
          <h4><%= issue.label %></h4>
        </div>
        <p><%= issue.description.slice(0...210) %>...</p>
        <div class="more">
          <%= link_to 'En savoir plus', issue_path(issue), class: "btn btn-default" %>
        </div>
        <div class="issues">
          <span class="comment"></span><%= issue.comments.count %>
          <span class="heart"></span><%= issue.likes.count %>
        </div>
      </div>
  <% end %>
</section>
